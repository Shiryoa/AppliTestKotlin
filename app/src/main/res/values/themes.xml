<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppliForm" parent="android:Theme.Material.Light.NoActionBar"/>

    <!-- Créer le composant ecriture par défaut-->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/greenavocado</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/studyalone</item>
    </style>

    <!-- Créer le composant soustitre par défaut-->
    <style name="SubTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/orange</item>
    </style>

    <!-- Créer le composant titre par défaut-->
    <style name="TitleTextStyle" parent="SubTextStyle">
        <item name="android:textSize">40sp</item>
    </style>

</resources>